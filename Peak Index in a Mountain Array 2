public class Solution {

    public static void main(String[] args) {
       int arr[] = {0, 2, 1, 0};
       int n = arr.length;
        int ans = 0, max = arr[0];
        for(int i = 0 ; i < n ; i++){
            if(arr[i] > max){
                max = arr[i];
                ans = i;
            }
        }
        
        System.out.println(ans);
    }
}
